{
    "compilerOptions": {
        "target": "ES6",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "useDefineForClassFields": true,
        "lib": ["ES2023", "DOM", "DOM.Iterable"],
        "skipLibCheck": true
    },
    "include": ["src/*"],
    "typedocOptions": {
        "name": "MobX React helper",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md",
        "plugin": ["typedoc-plugin-mdn-links"]
    }
}
